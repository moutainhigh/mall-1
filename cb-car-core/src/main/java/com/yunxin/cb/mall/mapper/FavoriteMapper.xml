<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunxin.cb.mall.dao.FavoriteDao">

<resultMap type="Favorite" id="Favorite">
	<id column="favorite_id" property="favoriteId" javaType="java.lang.Integer" jdbcType="INTEGER"/>
	<result column="create_time" property="createTime" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
	<result column="sale_price" property="salePrice" javaType="java.lang.Float" jdbcType="FLOAT"/>
	<result column="commodity_id" property="commodityId" javaType="java.lang.Integer" jdbcType="INTEGER"/>
	<result column="customer_id" property="customerId" javaType="java.lang.Integer" jdbcType="INTEGER"/>
	<result column="product_id" property="productId" javaType="java.lang.Integer" jdbcType="INTEGER"/>
</resultMap>


<!-- 全部字段，一般用于明细查询 -->
<sql id="AllColumnlist">
favorite_id,create_time,sale_price,commodity_id,customer_id,product_id
</sql>

<!-- 常见字段，一般用于列表查询，可能不包含备注之类的字段 -->
<sql id="CommonColumnlist">
favorite_id,create_time,sale_price,commodity_id,customer_id,product_id
</sql>

<insert id="add" parameterType="Favorite" useGeneratedKeys="true" keyProperty="favoriteId">
	insert into FAVORITE(
		<if test="favoriteId!=null">
		favorite_id,
		</if>
		create_time,
		sale_price,
		commodity_id,
		customer_id,
		product_id
	) values (
		<if test="favoriteId!=null">
		#{favoriteId,jdbcType = INTEGER},
		</if>
		#{createTime,jdbcType = TIMESTAMP},
		#{salePrice,jdbcType = FLOAT},
		#{commodityId,jdbcType = INTEGER},
		#{customerId,jdbcType = INTEGER},
		#{productId,jdbcType = INTEGER}
	)
</insert>

<update id="update" parameterType="Favorite">
	update FAVORITE 
	<set>
		<if test="createTime!=null ">
			create_time=#{createTime,jdbcType = TIMESTAMP},
		</if>
		<if test="salePrice!=null ">
			sale_price=#{salePrice,jdbcType = FLOAT},
		</if>
		<if test="commodityId!=null ">
			commodity_id=#{commodityId,jdbcType = INTEGER},
		</if>
		<if test="customerId!=null ">
			customer_id=#{customerId,jdbcType = INTEGER},
		</if>
		<if test="productId!=null ">
			product_id=#{productId,jdbcType = INTEGER},
		</if>
	</set>
	<where>
		AND favorite_id=#{favoriteId}
	</where>
</update>

<delete id="delete">
	delete from FAVORITE 
	<where>
		favorite_id=#{0}
	</where>
</delete>

<select id="get" resultMap="Favorite">
	select <include refid="AllColumnlist"/> from FAVORITE
	<where>
		favorite_id=#{0}
	</where>
</select>

<select id="getByIds" resultMap="Favorite">
	select <include refid="AllColumnlist"/> from FAVORITE
	<where>
		favorite_id in <foreach item="item" index="index" collection="array" open="(" separator="," close=")">#{item}</foreach>
	</where>
</select>

<select id="count" parameterType="Favorite" resultType="Long">
	select count(favorite_id) from FAVORITE 
	<where>
	<include refid="listCommonWhere"/>
	</where>
</select>

<select id="queryAll" parameterType="Favorite" resultMap="Favorite">
	select <include refid="CommonColumnlist"/> from FAVORITE 
	<where>
	<include refid="listCommonWhere"/>
	</where>
</select>

<select id="pageList" parameterType="Favorite" resultMap="Favorite">
	select <include refid="CommonColumnlist"/> from FAVORITE
	<where>
	 <include refid="listCommonWhere"/>
	</where>
	<![CDATA[LIMIT #{rowIndex},#{pageSize} ]]>
</select>


<sql id="listCommonWhere">
	<if test="q!=null">
		<if test="q.favoriteId!=null ">
			AND favorite_id=#{q.favoriteId}
		</if>
		<if test="q.createTime!=null ">
			AND create_time=#{q.createTime}
		</if>
		<if test="q.createTimeStart!=null">
		<![CDATA[	AND create_time>=#{q.createTimeStart}  ]]>
		</if>
		<if test="q.createTimeEnd!=null">
		<![CDATA[	AND create_time<#{q.createTimeEnd}   ]]>
		</if>
		<if test="q.salePrice!=null ">
			AND sale_price=#{q.salePrice}
		</if>
		<if test="q.commodityId!=null ">
			AND commodity_id=#{q.commodityId}
		</if>
		<if test="q.customerId!=null ">
			AND customer_id=#{q.customerId}
		</if>
		<if test="q.productId!=null ">
			AND product_id=#{q.productId}
		</if>
	</if>
</sql>

</mapper>